---
import { ViewTransitions } from 'astro:transitions';
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import MobileNav from '../components/MobileNav.astro'
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="GOVNRS music" />
		<meta name="viewport" content="width=device-width" />
    <!-- FAVICON -->
		<link rel="icon" href="/favicon/favicon.ico" sizes="any" />
    <link rel="icon" href="/favicon/icon.svg" type="image/svg+xml" />
    <link rel="apple-touch-icon" href="/favicon/apple-touch-icon.png" />
    <link rel="manifest" href="/favicon/manifest.webmanifest" />
    <!-- FONTS -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Vazirmatn:wght@100..900&display=swap" rel="stylesheet">

		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
    <ViewTransitions />
	</head>

	<body class="flex flex-col grow w-full min-h-full bg-white">
    <Header />
    <div class="md:p-8 bg-white bg-logo bg-no-repeat grow bg-fixed bg-[url('../GOVNRS-logo.svg')] relative p-6 ">
      <div class="absolute h-full w-full bg-white bg-opacity-85 top-0 left-0 z-0"></div>
      <div class="z-1 relative">
        <slot />
      </div>
    </div>
    <Footer />
    <div class="drawer">
      <div class="drawer-content">
        <MobileNav />
      </div>
    </div>


    <script is:inline src="https://cdn.jsdelivr.net/npm/flowbite@2.4.1/dist/flowbite.min.js"></script>
	</body>
</html>
